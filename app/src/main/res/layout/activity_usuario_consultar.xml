<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/teal_700"
    android:layout_height="match_parent"
    tools:context=".Usuarios.UsuarioConsultarActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista de usuarios"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/listt"
        android:layout_margin="10dp"
        android:gravity="center" />

    <EditText
        android:id="@+id/ediUNombre2"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/search"

        android:layout_height="wrap_content"
        android:background="#30ffffff"
        android:hint="Ingrese el nombre del usuario:"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:drawablePadding="20dp"/>


    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:layout_gravity="center"
        android:backgroundTint="@color/purple_200"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:onClick="Consultar"
        />

    <ListView
        android:id="@+id/lsVConsultarU"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/user"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="15dp" >
    </ListView>

</LinearLayout>